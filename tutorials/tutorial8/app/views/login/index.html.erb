<div class="form">
  <h1>MTZL Page.</h1>
  <h3>Please enter information to Log in.</h3>
  <%= form_with url: handle_login_path, local: "true" do |form| %>
    <div class="input">
      <%= form.text_field :attr, placeholder: "Please enter your email", name: "email", id: "email" %>
    </div><br>
    <div class="input">
      <%= form.password_field :attr, placeholder: "Enter password", name: "password", id: "password" %>
    </div><br>
    <span class="error"><%= @error %></span>
    <div class="button">
      <%= form.submit :login %>
    </div>
  <% end %>
</div>
